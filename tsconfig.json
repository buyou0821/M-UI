{
  "compilerOptions": {
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es6",
    "lib": ["dom", "es7"],
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true,
    "declaration": true
  },
  "include": [
    "example.tsx",
    "components/**/*",
    "lib/**/*",
    "include/**/*",
    "examples/**/*",
    "types/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "*.js"
  ]
}
